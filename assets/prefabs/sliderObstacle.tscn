script/source = "extends CollisionShape2D

@onready var start_position = self.position
@onready var slider_length = get_child(0).shape.extents.x
@onready var grabber_length = self.shape.extents.x

func calculate_grabber_position(slider_value):
	return Vector2((slider_length - grabber_length) * slider_value * 2
			+ start_position.x, start_position.y)

func _on_slider_value_changed(value):
	print(value)
	self.position = calculate_grabber_position(value)
